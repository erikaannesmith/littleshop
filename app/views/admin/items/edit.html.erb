<h1>Edit <%= @item.title %></h1>

<%= form_for(@item, url: admin_item_path(@item)) do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :price %>
    <%= f.number_field :price, in: 0.0..300.0, step: 0.5 %>
  </p>
  <p>
    <%= f.label :category %><br>
    <%= f.collection_select(:category_id, Category.all, :id, :name) %>
  </p>
  <p>
    <%= f.label "Image URL:" %>
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.label :status %>
    <%= f.text_field :status %>
  </p>
  <%= f.submit %>
<% end %>
