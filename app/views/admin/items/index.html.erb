<h1>All Items</h1>

<table>
  <tr>
    <th></th>
    <th>Item</th>
    <th>Description</th>
    <th>Status</th>
    <th>Actions</th>
  </tr>
  
  <% @items.each do |item| %>
    <tr>
      <td><%= image_tag(item.image.thumb) %></td>
      <td><%= link_to item.title, item_path(item) %></td>
      <td><%= item.description %></td>
      <td><%= item.status %></td>
      <td><%= link_to "Edit", edit_admin_item_path(item)  %></td>
   </tr>
  <% end %>
</table>